    event.preventDefault();
    var APPID = '4e85f3701f082910f2d45a69cc4e91aa';
    let cities = $('#search-cities input').val();

    $.get('api.openweathermap.org/data/2.5/weather', {
      q: 'Atlanta',
      APPID: APPID
    })
    .then(function(data) {
      console.log('data', data);
    })
    });

  </script>
</html>
