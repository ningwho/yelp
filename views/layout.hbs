  <script>
  $('#search-form').submit(function(event) {
    event.preventDefault();
    let searchTerm = $('#search-form input').val();
    $.get('/search?searchTerm=' + searchTerm)
      .then(function(resultsHTML) {
        $('#search-results').html(resultsHTML);
      });
